- style_name = activity.category.css_class
- (style_name.nil? || style_name.empty?) ? css_class = ".nevermind" : style_name
%div{ :class => style_name }
  .row.activity_list_element
    .col-md-2
      -unless activity.icon.empty?
        / = image_tag activity.icon, :class => "activity_icon"
        = link_to( (image_tag activity.icon, :class => "activity_icon"), "http://#{activity.url}", :target => "_blank")
      - else
        icon

    .col-md-3.title
      = link_to activity.name.titleize, "http://#{activity.url}", :target => "_blank"
    .col-md-7.description
      = link_to activity.description, "http://#{activity.url}", :target => "_blank"

