.container
	%h1 
		= "Showing All Items In '#{@category.name.capitalize}'"

	%h2 
		- unless @activities.empty?
			= @activities.first.category.blurb
		- else
			= "We don't have anything in this category yet..."

	= render :partial => "activity", :collection => @activities

	
	.row
		.col-md-12{ :style => "height: 100px;"}

	.row
		.col-md-12
			= link_to 'Home', :index
